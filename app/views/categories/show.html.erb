<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <li><%= item.price_in_dollars %></li>
    <li><%= link_to item.title, item_path(item) %></li>
    <%if user_signed_in?%>
    <li><%= button_to 'Add to Cart', line_items_path(item_id: item) %></li>
    <%end%>
<% end %>
</ul>
